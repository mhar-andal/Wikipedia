<div class="container">
  <div class="row" id="row-1">
    <div class="col-md-6 homepage-block" id="featured">
      <span class="homepage-headline" id="featured-title">Featured Article</span>
      <hr>
      <div class="row">
        <div class="col-sm-2">
          <div class="image-block">
            <img class="image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d1/Portrait_Gandhi.jpg/330px-Portrait_Gandhi.jpg">
          </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-8">
          <div class="article-information">
            <span class="article-title"><a href="/articles/<%= @feat_article.id %>"><%= @featured_article.title %></a></span>
            <%= @featured_article.paragraph %>
          </div>
        </div>
    </div>
    </div>


    <div class="col-md-6 homepage-block">
      <span class="homepage-headline">Newest</span>
      <hr>
      <div class="row">
        <div class="col-sm-2">
          <div class="image-block">
            <img class="image" src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d1/Portrait_Gandhi.jpg/330px-Portrait_Gandhi.jpg">
          </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-8">
          <div class="article-information">
            <span class="article-title"><a href="/articles/<%= @new_article.id %>"><%= @newest_article.title %></a></span>
            <%= @newest_article.paragraph %>
          </div>
        </div>
    </div>
    </div>
  </div>
</div>
