<div class="wrapper">
  <form class="form-signin" action="/users" method="post">
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |error| %>
        <p style="color: red"><%= error %>!</p>
      <% end %>
    <% end %>
    <h2 class="form-signin-heading">Please Register</h2>
    <input type="text" class="form-control" name="user[username]" placeholder="Username" required="" autofocus="" />
    <input type="password" class="form-control" name="user[password]" placeholder="Password" required=""/>
  </br>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
  </form>
</div>
