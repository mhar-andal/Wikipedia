<h2><%= flash.alert %></h2>
<%= form_for :category, url: categories_path(@category) do |f| %>
  <% if @category.errors.any? %>
    <% @category.errors.full_messages.each do |error| %>
    <p><%= error %></p>
    <% end %>
  <% end %>

  <p>
    <%= f.label "Category name: " %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Create Category" %>
  </p>

<% end %>
